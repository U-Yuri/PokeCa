<h1><%= @deck.name %></h1>


<h2>ポケモン</h2>
<% @pokemons.each do |pokemon|%>
  <%= form_with method: :post, model: @deck do |form| %>
    <input type="hidden" name="pokemon_id" value="<%= pokemon.id%>">
    <%= pokemon.name %>
    <%= form.submit "追加" %>
  <% end %>
<% end %>

<ul>
  <% @PokemonCardInDecks.each do |pokemon_card_in_deck| %>
    <%= form_with url:deck_cardindeck_path(pokemon_card_in_deck),method: :patch do |form| %>
      <input type="hidden" value="<%= pokemon_card_in_deck.id %>">
      <li>
        <%= pokemon_card_in_deck.pokemon.name %>
        <%= pokemon_card_in_deck.id %>
      </li>
      <%= form.button "削除", formmethod: :delete, data:{ confirm: "Are you sure?" } %>
    <% end %>
  <% end %>
</ul>